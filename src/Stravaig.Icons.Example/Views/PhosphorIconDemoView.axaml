<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:icons="clr-namespace:Stravaig.Avalonia.Controls.Icons;assembly=Stravaig.Avalonia.Controls.Icons"
             xmlns:vm="using:Stravaig.Icons.Example.ViewModels"
             x:DataType="vm:PhosphorIconDemoViewModel"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="Stravaig.Icons.Example.Views.PhosphorIconDemoView"
             Name="PhosphorIconDemo">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:PhosphorIconDemoViewModel/>
    </Design.DataContext>

    <StackPanel Orientation="Vertical">
        <Expander
            Name="PhosphorExpander"
            IsExpanded="{Binding IsExpanded}"
            HorizontalAlignment="Stretch">
            <Expander.Header>
                <TextBlock Classes="H1" Text="Phosphor Icons"/>
            </Expander.Header>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Classes="H2"
                        Text="Style:"/>
                    <ComboBox ItemsSource="{Binding IconTypes}"
                              SelectedIndex="{Binding SelectedIconTypeIndex}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <icons:PhosphorIcon
                                        Margin="5"
                                        Width="16"
                                        Height="16"
                                        IconName="Acorn"
                                        IconType="{Binding Key}"/>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Text="{Binding Value}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        Classes="H2"
                        VerticalAlignment="Center"
                        Text="Size:"/>
                    <Slider
                        HorizontalAlignment="Stretch"
                        Minimum="8"
                        Maximum="256"
                        MinWidth="256"
                        Value="{Binding IconSize}"/>
                    <TextBlock
                        Margin="5"
                        Text="{Binding IconSize}"
                        VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Classes="H2" Margin="5" Text="Colour:"/>
                    <ColorPicker
                        ColorModel="Rgba"
                        Width="200"
                        HsvColor="{Binding Colour}" />
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="{Binding RgbColour}"/>
                </StackPanel>

                <ItemsControl Name="IconsItemsControl" ItemsSource="{Binding Icons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel></WrapPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="5"
                                CornerRadius="5"
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Padding="5"
                                HorizontalAlignment="Left">
                                <StackPanel Orientation="Vertical">
                                    <icons:PhosphorIcon
                                        Color="{Binding #PhosphorIconDemo.((vm:PhosphorIconDemoViewModel)DataContext).Colour, FallbackValue=Gray}"
                                        IconName="{Binding Key}"
                                        IconType="{Binding #PhosphorIconDemo.((vm:PhosphorIconDemoViewModel)DataContext).SelectedIconType, FallbackValue={x:Static icons:PhosphorIconType.Regular}}"
                                        Width="{Binding #PhosphorIconDemo.((vm:PhosphorIconDemoViewModel)DataContext).IconSize, FallbackValue=24}"
                                        Height="{Binding #PhosphorIconDemo.((vm:PhosphorIconDemoViewModel)DataContext).IconSize, FallbackValue=24}"/>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="{Binding Value}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Expander>
    </StackPanel>
</UserControl>
